<% content_for :title, "Ishan Subedi | New Post" %>

<!---------header section---------->
<div id="header" style="position:absolute;z-index:-10;height:80%;">
<div id="coverText">
<h1 class="header_head"> New Post</h1>
<h2 class="header_head"> write a new post</h2>
</div>
</div>

<div id="content" style="position:absolute;top:80%">

<div id="post_form">
<%= simple_form_for @post do |f| %>
  <h3 class="label"> Title</h3>
  <%= f.input :title , placeholder: 'My Title', :input_html => {:class=> 'post_form_input'} %>
  <h3 class="label"> Author</h3>
  <%= f.input :author, placeholder: 'Ishan Subedi', :input_html => {:class=> 'post_form_input'} %>
  <h3 class="label"> Post Image</h3>
  <%= f.input :postimg, placeholder: 'Post Image source URL', :input_html => {:class=> 'post_form_input'} %>
  <h3 class="label"> Content</h3>
  <%= f.input :content, placeholder: 'My Content here', :input_html => {:class=> 'post_form_input content'} %>
  <%= f.input :created_at %>
  <div id="button">
    <%= f.submit 'CREATE POST', class: 'submit_button', id: 'submit' %> 
  </div>
<% end %>
</div>

<%= render partial: 'shared/footer.html.erb' %>

</div>