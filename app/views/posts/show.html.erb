<% content_for :title, "Ishan Subedi |  "+ @post.title   %>
<% content_for :description, @post.content %>
<% content_for :preview, @post.postimg %>

<!---------header section---------->
<div id="header" style="position:absolute;z-index:-10;height:80%;">
<div id="coverText">
<h1 class="header_head"> <%= @post.title %> </h1>
<h2 class="header_head"> Blog Post</h2>
</div>
</div>

<div id="content" style="position:absolute;top:80%">
  
  <div id="post">
    <div id="img_indivisual"><%= @post.postimg.html_safe %></div>
    <h5 class="date_time post_date_time"> posted on <%= @post.created_at.strftime("%d %B %Y") %> by <%= @post.author %></h5>
    
  <div style="text-align:center">
   <% if admin_signed_in? %>
    <a href="<%= edit_post_path(@post.id) %>"><h5 class="edit_delete"> Edit Post </h5></a>
    <%= link_to post_path(@post.id), method: 'delete', data: {confirm: 'Are you sure?'} do%>
      <h5 class="edit_delete"> Delete Post </h5>
    <% end %>
   <% end %>
  </div>
  <h3 class="post_body"><%= @post.content.gsub("\n", "<br>").html_safe %></h3>
  </div>
  
  <%= link_to "Next", post_path(Post.all[Post.all.index(@post)+1].id) if @post!= Post.last %>
  <%= link_to "Previous", post_path(Post.all[Post.all.index(@post)-1].id) if @post!= Post.first %>

  <div id="comment">
      <%= render partial: 'shared/comments.html.erb' %>
  </div> 
  
  
<%= render partial: 'shared/footer.html.erb' %>
  
</div>